<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taramtidam.taramtidam.Game3"
    android:background="@color/windowBackground">

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/selectteamtitleImageView"
        android:layout_width="304dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nightvampireButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/selectteamnightvampiresImageView"
        app:layout_constraintLeft_toLeftOf="@+id/selectteamnightvampiresImageView"
        app:layout_constraintRight_toRightOf="@+id/selectteamnightvampiresImageView"
        app:layout_constraintTop_toTopOf="@+id/selectteamnightvampiresImageView" />

    <Button
        android:id="@+id/dayvampireButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/selectteamdayvampiresImageView"
        app:layout_constraintLeft_toLeftOf="@+id/selectteamdayvampiresImageView"
        app:layout_constraintRight_toRightOf="@+id/selectteamdayvampiresImageView"
        app:layout_constraintTop_toTopOf="@+id/selectteamdayvampiresImageView" />

    <ImageView
        android:id="@+id/selectteamdayvampiresImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectteamnightvampiresImageView" />

    <ImageView
        android:id="@+id/selectteamnightvampiresImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectteamtitleImageView" />

</android.support.constraint.ConstraintLayout>