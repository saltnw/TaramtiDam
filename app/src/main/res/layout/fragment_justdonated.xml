<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    tools:context="com.taramtidam.taramtidam.activity.JustDonatedFragment">

    <ImageView
        android:id="@+id/topPanelimageView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/rectangleviewprofile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/rankImageView"></ImageView>

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="Thank You"
        android:textColor="@color/colorProfileTitle"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <ImageView
        android:id="@+id/rankImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/newCharTextView" />

    <Button
        android:id="@+id/twitterButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/tweetersharebtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/facebookButton"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/facebookButton"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/facebooksharebtn"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/newCharTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your new Character"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageView
        android:id="@+id/bloodCounterImgaeView"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/BloodcounterTextView"
        app:layout_constraintLeft_toRightOf="@+id/BloodcounterTextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:text="You donated so far"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topPanelimageView"
        android:layout_marginTop="15dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/BloodcounterTextView"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/colorProfileTitle"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/togameresultButton"
        android:layout_width="121dp"
        android:layout_height="63dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/viewgameresults"
        app:layout_constraintBottom_toBottomOf="@+id/topPanelimageView"
        app:layout_constraintTop_toTopOf="@+id/topPanelimageView"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/topPanelimageView"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Notifications will be off for the next 3 months -"
        android:textColor="@color/colorProfileTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/topPanelimageView" />

</android.support.constraint.ConstraintLayout>