<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    tools:context="com.taramtidam.taramtidam.activity.HomeFragment"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/WelcomTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Dam"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="Taramti"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp" />

    <TextView
        android:id="@+id/Slogen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="12sp"
        android:text="Get live updates of \nblood mobile \naround you."
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/tipatDamImgaeView"
        android:layout_width="88dp"
        android:layout_height="77dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/WelcomTV"
        app:layout_constraintTop_toTopOf="@+id/WelcomTV"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="174dp"
        android:layout_height="73dp"
        android:background="@drawable/loginbtnbackground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="invisible"

        />
    />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/logoutButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="174dp"
        android:layout_height="73dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/logoutbtnbackground"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/loadprofileProgressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/logoutButton"
        tools:visibility="gone" />

    <Button
        android:id="@+id/gamecubeButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="174dp"
        android:layout_height="73dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/jointhegame"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>